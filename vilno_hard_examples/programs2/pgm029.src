

directoryref a="/home/???/vilno_hard_examples/testdata/smalldbase" 
             b="/home/???/vilno_hard_examples/testdata/area029" ;

printoptions b/prtfile1 ;



windowsize 20 ;


inlist ;
addgridvars int: i   str: b1 1   float: f ;
{
  b1="A" ;
  for i = 1 to 20 : copyrow ;
  b1="B" ;
  for i = 1 to 40 : copyrow ;
  b1="C" ;
  for i = 1 to 70 : copyrow ;
  deleterow ;
}
if (b1=="A" and i>10) i=i-1 ;
else if (b1=="B" and i>20) i=i-1 ;
else if (b1=="C" and i>35) i=i-1 ;
f = i ;
sendoff(b/dat1) b1 i f ;
turnoff ;


print(b/dat1) "PGM029-1 : original dset" ;


/////////////////////


inlist b/dat1 ;
select  numrows=n() min_i=min(i) max_i=max(i) min_f=min(f) max_f=max(f) 
      by b1  ;
sendoff(b/dat2) b1 numrows min_i max_i min_f max_f  ;
turnoff ;

print(b/dat2) "PGM029-2 : dat2" ;


//////////////////////


inlist b/dat1 ;
if ( (b1=="A" and i==10) or (b1=="B" and i==20) or (b1=="C" and i==35) )
   f = i = null ; 
select  numrows=n() n2=n(i) n3=n(f) min_i=min(i) max_i=max(i) min_f=min(f) max_f=max(f) 
      by b1  ;
sendoff(b/dat3) b1 numrows n2 n3 min_i max_i min_f max_f  ;
turnoff ;

print(b/dat3) "PGM029-3 : dat3" ;




////////////////////////////





inlist b/dat1 ;
if ( (b1=="A" and i==10) or (b1=="B" and i==20) or (b1=="C" and i==35) )
   f = i = null ; 
gridfunc num_i=n(i) by b1 ;
gridfunc min_i=min(i)  by b1 ;
gridfunc min_f=min(f)  by b1 ;
gridfunc max_i=max(i)  by b1 ;
gridfunc max_f=max(f)  by b1 ;
sendoff(b/dat4) b1 i f num_i min_i min_f  max_i max_f ;
turnoff ;

print(b/dat4) "PGM029-4 : dat4" ;




